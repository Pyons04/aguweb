What's New...?
<% @reviews.each do |review| %>
<br><br>
<div class="panel panel-primary">
  <div class="panel-heading">
  <span class="label label-default">New</span>
    <%= review.unit.kyouin %>先生<br>
<%= review.unit.jigen.delete("[青山]").delete("年").delete("期") %>期科目
<%= review.unit.kaikou.delete("学部").delete("山").delete("ンダード科目") %>学部科目<br>
  </div>
  <div class="panel-footer">
  <%= time_ago_in_words review.created_at %>&nbsp;&nbsp;ago<br>
  投稿レビュー：<%= review.content.truncate(40) %>
  <%= link_to "show detail","reviews/#{review.unit.id}",method: :get %><br>
  </div>
</div>

<br><br>
<% end %>