</select>曜日<br>

<select name="jigen">
<option value="" >指定なし</option>
<option value="１" >１</option>
<option value="２" >２</option>
<option value="３" >３</option>
<option value="４" >４</option>
<option value="５" >５</option>
<option value="６" >６</option>
</select>時限目<br>

<select name="kaikou">学部で絞り込む<br>
<option value="">指定なし</option>
<option value="青山スタンダード" >青スタ</option>
<option value="経済" >経済学部</option>
<option value="経営" >経営学部</option>
<option value="総合文化政策学部" >総合文化政策学部</option>
</select>の科目<br>

<input class="search__query" name="keyword_kyouin" placeholder="教員で検索" type="text" value=""><button class="btn-search" title="検索" type="submit">SEARCH<i class="icon-search"></i></button></input>
<% end %>


<% @units.each do |unit| %>


<%= unit.kyouin %>先生<br>
<%= unit.jigen.delete("[青山]").delete("年").delete("期")%>期科目 <br>
