<%= form_tag('/top/show', method: :get) do %>
<input class="search__query" name="keyword_kamoku" placeholder="科目で検索" type="text" value=""><br>
<select name="day">
<option value="" >指定なし</option>
<option value="月" >月</option>
<option value="火" >火</option>
